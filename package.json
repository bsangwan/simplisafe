{
  "name": "simplisafe",
  "version": "1.0.0",
  "description": "A Node.js wrapper around the undocumented Simplisafe HTTP API",
  "main": "lib/simplisafe.js",
  "scripts": {
    "test": "npm run test:unit && npm run style && npm run test:safe",
